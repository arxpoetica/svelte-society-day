html {
	height: 100%;
	background-color: #35363a;
	font: 1px/1.2 $font; // 1rem === 1px in this scenario
	box-sizing: border-box;
	text-size-adjust: 100%;
	opacity: 1;
	transition: opacity 0.1s ease-in-out;
	&.preloaded {
		opacity: 0;
	}
}
body {
	display: flex;
	min-height: 100%;
	margin: 0;
	background-color: #35363a;
	color: $black;
	font-size: 20rem;
}
.yavascript {
	overflow: hidden;
	position: absolute;
	width: 0;
	height: 0;
	top: -1px;
	left: -1px;
	pointer-events: none;
}

// PANELS, etc.

.sticky {
	flex: 1;
	position: sticky;
	top: -1rem;
	height: calc(100vh - 99rem);
}

.panel-fixed {
	display: grid;
	grid-gap: 50rem;
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	width: 100%;
	padding: 50rem;
	background-color: #333;
	&.columns { grid-auto-flow: column; }
}

.panel-clip {
	overflow: hidden;
}
.panel-content {
	height: 100%;
	background: none no-repeat center transparent;
	background-size: cover;
}

.content {
	flex: 1;
}
.panel-scroll {
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	position: relative;
	text-align: center;
	// height: calc(100vh - 99rem);
	height: 100vh;
	padding: 0 100rem;
	blockquote {
		width: 100%;
		margin: 0 auto;
	}
}
