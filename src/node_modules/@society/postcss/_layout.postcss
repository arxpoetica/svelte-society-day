html {
	height: 100%;
	background-color: #e4e3df;
	font: 1px/1.2 $font; // 1rem === 1px in this scenario
	box-sizing: border-box;
	text-size-adjust: 100%;
	opacity: 1;
	transition: opacity 0.1s ease-in-out;
	&.preloaded {
		opacity: 0;
	}
	// special overrides
	&.assets-page,
	&.posts-page {
		h1 {
			overflow: hidden;
			position: absolute !important;
			width: 1px;
			height: 1px;
			clip: rect(1px, 1px, 1px, 1px);
			clip-path: inset(0 100% 100% 0);
		}
	}
	&.assets-slug-page {
		h2 {
			color: $red-main;
		}
	}
}
body {
	display: flex;
	min-height: 100%;
	margin: 0;
	background-color: #e4e3df;
	color: $black;
	font: 15rem/1.15 $font;
	letter-spacing: 0.02em;
}
.layout-outer {
	width: 100%;
	max-width: $layout-width;
	padding: 0 30rem;
	margin: 0 auto;
	@media (--small-down) { padding: 0 20rem; }
}
// .layout-inner {}
.layout-main {
	padding: 100rem 0;
	@media (--small-down) { padding: 40rem 0; }
}
.chapters {
	margin: 0 -30rem;
	@media (--small-down) { margin: 0 -20rem; }
}
.chapter {
	position: relative;
	z-index: 1;
}
.chapter-content {
	position: relative;
	margin: 0 auto;
	// padding: 0 40rem;
	width: 100%;
	max-width: $layout-width;
	z-index: 2;
	// @media (--small-down) { padding: 0 20rem; }
}
// https://css-tricks.com/full-width-containers-limited-width-parents/
// https://codepen.io/tigt/post/bust-elements-out-of-containers-with-one-line-of-css
.full-width {
	margin: 0 calc(50% - 50vw);
}
.yavascript {
	overflow: hidden;
	position: absolute;
	width: 0;
	height: 0;
	top: -1px;
	left: -1px;
	pointer-events: none;
}
